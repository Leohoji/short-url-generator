<!-- Title and image -->
<div class="layout-design d-flex flex-column align-items-center mt-4">
  <h1 class="fs-3">URL Shortener</h1>
  <img class="w-25" src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png"
    alt="Layout image">
</div>

<!-- URL input -->
<form action="/copy" method="POST">
  <div class="mb-2 mt-5 d-flex flex-column align-items-center">
    <input type="url" class="form-control bg-light fw-semibold" placeholder="Input URL Here" name="url" required>
    <button class="shorten border border-primary text-primary mt-4 p-1" style="width: 250px; background-color: white"
      type="submit">
      Shorten
    </button>
  </div>
</form>